            &amp; &amp; 4
            &amp; &amp; 6
            &amp; &amp; 8
     \\\hline
f(x)
        &amp; &amp; 0
            &amp; &amp; 1
            &amp; &amp; \nexists
            &amp; &amp; -1
            &amp; &amp; \nexists
            &amp; &amp; 1
            &amp; &amp; \nexists
            &amp; &amp; 4
            &amp; &amp; 3
     \\
f'(x) &amp;
        + &amp; &amp;
